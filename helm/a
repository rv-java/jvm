---
# Source: jvm/templates/secret.yaml
apiVersion: v1
kind: Secret
metadata:
  name: mysecret
type: Opaque
data:
  JAVA_OPTS: mysecret
---
# Source: jvm/templates/configmap.yaml
apiVersion: v1
kind: ConfigMap  
metadata:  
  name: configmap
data:  
  JAVA_OPTS2 : tmpuser
---
# Source: jvm/templates/service.yaml
apiVersion: v1
kind: Service
metadata:
  name: release-name-jvm
  labels:
    helm.sh/chart: jvm-0.1.0
    app.kubernetes.io/name: jvm
    app.kubernetes.io/instance: release-name
spec:
  type: LoadBalancer
  ports:
    - port: 8080
      targetPort: 8080
      protocol: TCP
      name: service-port
  selector:
    app.kubernetes.io/name: jvm
    app.kubernetes.io/instance: release-name
---
# Source: jvm/templates/deployment.yaml
apiVersion: apps/v1
kind: Deployment
metadata:
  name: release-name-jvm
  labels:
    helm.sh/chart: jvm-0.1.0
    app.kubernetes.io/name: jvm
    app.kubernetes.io/instance: release-name
spec:
  replicas: 1
  selector:
    matchLabels:
      app.kubernetes.io/name: jvm
      app.kubernetes.io/instance: release-name
  template:
    metadata:
      labels:
        app.kubernetes.io/name: jvm
        app.kubernetes.io/instance: release-name
    spec:
      containers:
        - name: jvm-image
          image: "venerayan/jvm:latest"
          imagePullPolicy: IfNotPresent
          ports:
          - containerPort: 8080
          env:
            - name: JAVA_OPTS
              valueFrom:
                secretKeyRef:
                  name: mysecret
                  key: JAVA_OPTS
            - name: JAVA_OPTS2
              valueFrom:
                configMapKeyRef:
                  name: configmap
                  key: JAVA_OPTS2
          resources:
            {}
